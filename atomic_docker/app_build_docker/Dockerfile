ENV NEXT_PUBLIC_CHAT_WS_API_URL=${NEXT_PUBLIC_CHAT_WS_API_URL}
ARG NEXT_PUBLIC_GOOGLE_PEOPLE_SYNC_URL
ENV NEXT_PUBLIC_GOOGLE_PEOPLE_SYNC_URL=${NEXT_PUBLIC_GOOGLE_PEOPLE_SYNC_URL}
ARG NEXT_PUBLIC_ADD_DAILY_FEATURES_AUTOPILOT_URL
ENV NEXT_PUBLIC_ADD_DAILY_FEATURES_AUTOPILOT_URL=${NEXT_PUBLIC_ADD_DAILY_FEATURES_AUTOPILOT_URL}
ARG NEXT_PUBLIC_DELETE_SCHEDULED_EVENT_URL
ENV NEXT_PUBLIC_DELETE_SCHEDULED_EVENT_URL=${NEXT_PUBLIC_DELETE_SCHEDULED_EVENT_URL}
ARG NEXT_PUBLIC_ZOOM_CREATE_MEETING_URL
ENV NEXT_PUBLIC_ZOOM_CREATE_MEETING_URL=${NEXT_PUBLIC_ZOOM_CREATE_MEETING_URL}
ARG NEXT_PUBLIC_ZOOM_UPDATE_MEETING_URL
ENV NEXT_PUBLIC_ZOOM_UPDATE_MEETING_URL=${NEXT_PUBLIC_ZOOM_UPDATE_MEETING_URL}
ARG NEXT_PUBLIC_ZOOM_DELETE_MEETING_URL
ENV NEXT_PUBLIC_ZOOM_DELETE_MEETING_URL=${NEXT_PUBLIC_ZOOM_DELETE_MEETING_URL}
ARG NEXT_PUBLIC_ZOOM_OAUTH_START_URL
ENV NEXT_PUBLIC_ZOOM_OAUTH_START_URL=${NEXT_PUBLIC_ZOOM_OAUTH_START_URL}

# Next.js collects completely anonymous telemetry data about general usage. Learn more here: https://nextjs.org/telemetry
# Uncomment the following line to disable telemetry at build time
# ENV NEXT_TELEMETRY_DISABLED 1

# Build Next.js based on the preferred package manager
RUN \
  if [ -f yarn.lock ]; then yarn build; \
  elif [ -f package-lock.json ]; then npm run build; \
  elif [ -f pnpm-lock.yaml ]; then pnpm build; \
  else yarn build; \
  fi

# Note: It is not necessary to add an intermediate step that does a full copy of `node_modules` here

# Step 2. Production image, copy all the files and run next
FROM base AS runner

WORKDIR /app

# Don't run production as root
RUN addgroup --system --gid 1001 nodejs
RUN adduser --system --uid 1001 nextjs
USER nextjs

COPY --from=builder /app/public ./public

# Automatically leverage output traces to reduce image size
# https://nextjs.org/docs/advanced-features/output-file-tracing
COPY --from=builder --chown=nextjs:nodejs /app/.next/standalone ./
COPY --from=builder --chown=nextjs:nodejs /app/.next/static ./.next/static

# Environment variables must be redefined at run time
ARG HASURA_GRAPHQL_ADMIN_SECRET
ENV HASURA_GRAPHQL_ADMIN_SECRET=${HASURA_GRAPHQL_ADMIN_SECRET}
ARG NEXT_PUBLIC_ATOMIC_HANDSHAKE_API
