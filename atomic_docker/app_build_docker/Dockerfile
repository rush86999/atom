ENV NEXT_PUBLIC_GOOGLE_OAUTH_ATOMIC_WEB_API_START_URL=${NEXT_PUBLIC_GOOGLE_OAUTH_ATOMIC_WEB_API_START_URL}
ARG NEXT_PUBLIC_GOOGLE_OAUTH_ATOMIC_WEB_REDIRECT_URL
ENV NEXT_PUBLIC_GOOGLE_OAUTH_ATOMIC_WEB_REDIRECT_URL=${NEXT_PUBLIC_GOOGLE_OAUTH_ATOMIC_WEB_REDIRECT_URL}
ARG GOOGLE_CLIENT_ID_ATOMIC_WEB
ENV GOOGLE_CLIENT_ID_ATOMIC_WEB=${GOOGLE_CLIENT_ID_ATOMIC_WEB}
ARG GOOGLE_CLIENT_SECRET_ATOMIC_WEB
ENV GOOGLE_CLIENT_SECRET_ATOMIC_WEB=${GOOGLE_CLIENT_SECRET_ATOMIC_WEB}
ARG ZOOM_IV_FOR_PASS
ENV ZOOM_IV_FOR_PASS=${ZOOM_IV_FOR_PASS}
ARG ZOOM_PASS_KEY
ENV ZOOM_PASS_KEY=${ZOOM_PASS_KEY}
ARG NEXT_PUBLIC_EMAIL_MEETING_INFO_TO_HOST_URL
ENV NEXT_PUBLIC_EMAIL_MEETING_INFO_TO_HOST_URL=${NEXT_PUBLIC_EMAIL_MEETING_INFO_TO_HOST_URL}
ARG NEXT_PUBLIC_EMAIL_MEETING_INVITE_URL
ENV NEXT_PUBLIC_EMAIL_MEETING_INVITE_URL=${NEXT_PUBLIC_EMAIL_MEETING_INVITE_URL}
ARG NEXT_PUBLIC_EMAIL_MEETING_CANCEL_URL
ENV NEXT_PUBLIC_EMAIL_MEETING_CANCEL_URL=${NEXT_PUBLIC_EMAIL_MEETING_CANCEL_URL}
ARG NEXT_PUBLIC_HANDSHAKE_URL
ENV NEXT_PUBLIC_HANDSHAKE_URL=${NEXT_PUBLIC_HANDSHAKE_URL}
ARG NEXT_PUBLIC_DELETE_ZOOM_CONFERENCE_URL
