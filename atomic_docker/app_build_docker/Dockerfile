FROM node:18-alpine AS base

# Step 1. Rebuild the source code only when needed
FROM base AS builder

WORKDIR /app

# Install dependencies based on the preferred package manager
COPY package.json yarn.lock* package-lock.json* pnpm-lock.yaml* ./
# Omit --production flag for TypeScript devDependencies
RUN \
  if [ -f yarn.lock ]; then yarn --frozen-lockfile --network-timeout 1000000; \
  elif [ -f package-lock.json ]; then npm ci; \
  elif [ -f pnpm-lock.yaml ]; then yarn global add pnpm && pnpm i; \
  # Allow install without lockfile, so example works even without Node.js installed locally
  else echo "Warning: Lockfile not found. It is recommended to commit lockfiles to version control." && yarn install; \
  fi

COPY components ./components
COPY config ./config
COPY layouts ./layouts
COPY lib ./lib
COPY pages ./pages
COPY public ./public
COPY styles ./styles
COPY next.config.js .
COPY postcss.config.js .
COPY tailwind.config.js .
COPY tsconfig.json .
COPY raf.ts .


# Environment variables must be present at build time
# https://github.com/vercel/next.js/discussions/14030
ARG HASURA_GRAPHQL_ADMIN_SECRET
ENV HASURA_GRAPHQL_ADMIN_SECRET=${HASURA_GRAPHQL_ADMIN_SECRET}
ARG NEXT_PUBLIC_ATOMIC_HANDSHAKE_API
ENV NEXT_PUBLIC_ATOMIC_HANDSHAKE_API=${NEXT_PUBLIC_ATOMIC_HANDSHAKE_API}
ARG HASURA_GRAPHQL_GRAPHQL_URL
ENV HASURA_GRAPHQL_GRAPHQL_URL=${HASURA_GRAPHQL_GRAPHQL_URL}
ARG NEXT_PUBLIC_HASURA_GRAPHQL_GRAPHQL_URL
ENV NEXT_PUBLIC_HASURA_GRAPHQL_GRAPHQL_URL=${NEXT_PUBLIC_HASURA_GRAPHQL_GRAPHQL_URL}
ARG NEXT_PUBLIC_HASURA_GRAPHQL_GRAPHQL_WS_URL
ENV NEXT_PUBLIC_HASURA_GRAPHQL_GRAPHQL_WS_URL=${NEXT_PUBLIC_HASURA_GRAPHQL_GRAPHQL_WS_URL}
ARG NEXT_PUBLIC_EVENT_TO_QUEUE_AUTH_URL
ENV NEXT_PUBLIC_EVENT_TO_QUEUE_AUTH_URL=${NEXT_PUBLIC_EVENT_TO_QUEUE_AUTH_URL}
ARG NEXT_PUBLIC_EVENT_TO_QUEUE_SHORT_AUTH_URL
ENV NEXT_PUBLIC_EVENT_TO_QUEUE_SHORT_AUTH_URL=${NEXT_PUBLIC_EVENT_TO_QUEUE_SHORT_AUTH_URL}
ARG NEXT_PUBLIC_CALENDAR_TO_QUEUE_AUTH_URL
ENV NEXT_PUBLIC_CALENDAR_TO_QUEUE_AUTH_URL=${NEXT_PUBLIC_CALENDAR_TO_QUEUE_AUTH_URL}
ARG NEXT_PUBLIC_FEATURES_APPLY_TO_EVENTS_AUTH_URL
ENV NEXT_PUBLIC_FEATURES_APPLY_TO_EVENTS_AUTH_URL=${NEXT_PUBLIC_FEATURES_APPLY_TO_EVENTS_AUTH_URL}
ARG NEXT_PUBLIC_METHOD_TO_SEARCH_INDEX_AUTH_URL
ENV NEXT_PUBLIC_METHOD_TO_SEARCH_INDEX_AUTH_URL=${NEXT_PUBLIC_METHOD_TO_SEARCH_INDEX_AUTH_URL}
ARG NEXT_PUBLIC_GOOGLE_CALENDAR_ANDROID_AUTH_URL
ENV NEXT_PUBLIC_GOOGLE_CALENDAR_ANDROID_AUTH_URL=${NEXT_PUBLIC_GOOGLE_CALENDAR_ANDROID_AUTH_URL}
