{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "ATOM",
    "version": "1.1.0",
    "identifier": "com.atom.app",
    "build": {
        "beforeDevCommand": "npm run dev",
        "devUrl": "http://localhost:3000",
        "frontendDist": "../frontend-nextjs/.next"
    },
    "bundle": {
        "active": true,
        "targets": [
            "dmg",
            "app"
        ],
        "category": "DeveloperTool",
        "shortDescription": "ATOM Desktop App",
        "longDescription": "ATOM - Advanced Task Orchestration & Management",
        "icon": [
            "icons/atom-ai-2.ico"
        ],
        "macOS": {
            "minimumSystemVersion": "10.15"
        }
    },
    "app": {
        "windows": [
            {
                "title": "ATOM",
                "width": 1200,
                "height": 800,
                "resizable": true,
                "fullscreen": false,
                "center": true,
                "maximized": true,
                "minWidth": 800,
                "minHeight": 600
            }
        ],
        "security": {
            "csp": "default-src 'self' blob: data: filesystem: ws: wss: http://localhost:* ; script-src 'self' 'unsafe-eval' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:"
        }
    }
}