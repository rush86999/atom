# Atom Mobile App Environment Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# API Configuration
# ============================================================================

# Backend API URL (without trailing slash)
API_BASE_URL=https://api.atom-platform.com

# WebSocket URL for real-time updates
WEBSOCKET_URL=wss://api.atom-platform.com

# Environment: development, staging, production
ENVIRONMENT=production

# ============================================================================
# Authentication
# ============================================================================

# JWT Secret for local development (DO NOT use in production)
JWT_SECRET=your-jwt-secret-here

# OAuth Providers (optional)
GOOGLE_IOS_CLIENT_ID=your-google-ios-client-id
GOOGLE_ANDROID_CLIENT_ID=your-google-android-client-id
GOOGLE_WEB_CLIENT_ID=your-google-web-client-id

# ============================================================================
# Build Configuration
# ============================================================================

# App Version (from package.json)
APP_VERSION=1.0.0
APP_BUILD_NUMBER=1

# Bundle Identifiers
IOS_BUNDLE_ID=com.atomplatform.ai
ANDROID_PACKAGE=com.atomplatform.ai

# ============================================================================
# Monitoring & Analytics
# ============================================================================

# Sentry for error tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ORG=your-organization
SENTRY_PROJECT=atom-mobile

# Analytics (optional)
ANALYTICS_KEY=your-analytics-key
AMPLITUDE_API_KEY=your-amplitude-key

# ============================================================================
# Third-Party Services
# ============================================================================

# CodePush for OTA updates
CODEPush_IOS_DEPLOYMENT_KEY=your-ios-deployment-key
CODEPush_ANDROID_DEPLOYMENT_KEY=your-android-deployment-key

# Firebase (optional)
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your-sender-id
FIREBASE_APP_ID=your-firebase-app-id

# Push Notifications
EXPO_PUSH_NOTIFICATION_KEY=your-push-notification-key

# ============================================================================
# Feature Flags
# ============================================================================

# Enable debug mode (development only)
DEBUG_MODE=false

# Enable experimental features
EXPERIMENTAL_FEATURES=false

# Enable offline mode
OFFLINE_MODE_SUPPORTED=true

# ============================================================================
# Build Variants
# ============================================================================

# Development Build
DEV_API_BASE_URL=http://localhost:8000
DEV_WEBSOCKET_URL=ws://localhost:8000

# Staging Build
STAGING_API_BASE_URL=https://staging-api.atom-platform.com
STAGING_WEBSOCKET_URL=wss://staging-api.atom-platform.com

# ============================================================================
# App Store Configuration
# ============================================================================

# Apple App Store Connect
APPLE_APP_ID=your-apple-app-id
APPLE_TEAM_ID=your-apple-team-id

# Google Play Console
GOOGLE_PLAY_SERVICE_ACCOUNT_JSON=./google-service-account.json

# ============================================================================
# Deep Links
# ============================================================================

# Custom URL schemes
DEEP_LINK_SCHEME=atom

# Associated domains (for universal links)
ASSOCIATED_DOMAINS=atom-platform.com

# ============================================================================
# Performance & Optimization
# ============================================================================

# Cache duration (in seconds)
CACHE_DURATION=3600

# Request timeout (in milliseconds)
REQUEST_TIMEOUT=30000

# WebSocket reconnect interval (in milliseconds)
WS_RECONNECT_INTERVAL=5000

# ============================================================================
# Security
# ============================================================================

# Certificate pinning (optional)
CERTIFICATE_PINNING_ENABLED=false

# SSL pinning certificates (comma-separated)
SSL_CERTIFICATES=

# ============================================================================
# Development Tools
# ============================================================================

# Flipper (debugging tool)
FLIPPER_ENABLED=false

# React Native Debugger
REACT_NATIVE_DEBUGGER_ENABLED=false

# ============================================================================
# Localization
# ============================================================================

# Default language
DEFAULT_LANGUAGE=en

# Supported languages (comma-separated)
SUPPORTED_LANGUAGES=en,es,fr,de,ja,zh
