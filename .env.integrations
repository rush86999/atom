# ATOM Integration Environment Configuration
# Copy this file to .env and fill in your actual credentials

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/atom_db

# Encryption Key (generate with: openssl rand -base64 32)
ATOM_OAUTH_ENCRYPTION_KEY=your-32-byte-base64-encryption-key-here

# Flask Configuration
FLASK_SECRET_KEY=your-flask-secret-key-here
FLASK_ENV=development

# API Service Configuration
PYTHON_API_SERVICE_BASE_URL=http://localhost:8000

# Asana OAuth Configuration
ASANA_CLIENT_ID=your_asana_client_id
ASANA_CLIENT_SECRET=your_asana_client_secret
ASANA_REDIRECT_URI=http://localhost:8000/api/auth/asana/callback

# GitHub OAuth Configuration
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_REDIRECT_URI=http://localhost:8000/api/auth/github/callback

