# Trello Integration Test Environment
# Copy this file to .env or set these variables in your environment

# Trello API Configuration
TRELLO_API_KEY=your_trello_api_key_here
TRELLO_API_SECRET=your_trello_api_token_here
TRELLO_REDIRECT_URI=http://localhost:3000/oauth/trello/callback

# Optional: Direct token access for testing
TRELLO_ACCESS_TOKEN=your_trello_access_token_here
TRELLO_TOKEN_SECRET=your_trello_token_secret_here
TRELLO_MEMBER_ID=your_trello_member_id_here
TRELLO_MEMBER_NAME=Your Name

# Backend Configuration
PORT=5058
