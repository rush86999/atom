# Production Environment Configuration
# Atom AI Automation Platform
# Generated: February 1, 2026
#
# IMPORTANT: Copy this file to .env.production and fill in all values
# Do not commit .env.production to version control

# ============================================================================
# Application Settings
# ============================================================================
FLASK_ENV=production
DEBUG=False
SECRET_KEY=CHANGE_THIS_TO_A_RANDOM_SECRET_KEY_MINIMUM_32_CHARACTERS

# Server Configuration
HOST=0.0.0.0
PORT=8000
PRODUCTION_DOMAIN=your-production-domain.com

# ============================================================================
# Database Configuration
# ============================================================================
# PostgreSQL (recommended for production)
DATABASE_URL=postgresql://username:password@localhost:5432/atom_production

# OR SQLite (for smaller deployments)
# DATABASE_URL=sqlite:///./data/atom_production.db

# ============================================================================
# Security Configuration
# ============================================================================
# OAuth token encryption key (generate with: python -c "import secrets; print(secrets.token_urlsafe(32))")
ATOM_OAUTH_ENCRYPTION_KEY=CHANGE_THIS_TO_A_RANDOM_ENCRYPTION_KEY

CSRF_ENABLED=True
SESSION_SECURE=True

# ============================================================================
# OAuth Configuration
# ============================================================================
# Google Workspace (Gmail, Calendar, Drive)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Slack
SLACK_CLIENT_ID=
SLACK_CLIENT_SECRET=

# Trello
TRELLO_API_KEY=
TRELLO_API_SECRET=

# Asana
ASANA_CLIENT_ID=
ASANA_CLIENT_SECRET=

# Notion
NOTION_CLIENT_ID=
NOTION_CLIENT_SECRET=

# Dropbox
DROPBOX_CLIENT_ID=
DROPBOX_CLIENT_SECRET=

# Microsoft Outlook (Calendar & Email integration)
OUTLOOK_CLIENT_ID=
OUTLOOK_CLIENT_SECRET=

# Microsoft Teams (Chat & Collaboration integration)
TEAMS_CLIENT_ID=
TEAMS_CLIENT_SECRET=

# GitHub (Repository & Issue integration)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# ============================================================================
# AI Provider Configuration
# ============================================================================
# OpenAI (GPT-4, GPT-3.5)
OPENAI_API_KEY=

# Anthropic (Claude)
ANTHROPIC_API_KEY=

# DeepSeek
DEEPSEEK_API_KEY=

# Google AI (Gemini)
GOOGLE_AI_API_KEY=

# ============================================================================
# Device Capabilities Configuration
# ============================================================================
DEVICE_GOVERNANCE_ENABLED=true
EMERGENCY_GOVERNANCE_BYPASS=false
DEVICE_SCREEN_RECORD_MAX_DURATION=3600

# ============================================================================
# Monitoring & Logging
# ============================================================================
ENABLE_METRICS=True
LOG_LEVEL=INFO
HEALTH_CHECK_INTERVAL=30

# Sentry (error tracking)
SENTRY_DSN=

# ============================================================================
# Feature Flags
# ============================================================================
STREAMING_GOVERNANCE_ENABLED=true
CANVAS_GOVERNANCE_ENABLED=true
FORM_GOVERNANCE_ENABLED=true
BROWSER_GOVERNANCE_ENABLED=true
DEVICE_WEBSOCKET_ENABLED=true

# ============================================================================
# Rate Limiting
# ============================================================================
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600

# ============================================================================
# SSL/TLS Configuration (for production with nginx/reverse proxy)
# ============================================================================
SSL_CERT_PATH=/etc/ssl/certs/your-domain.crt
SSL_KEY_PATH=/etc/ssl/private/your-domain.key

# ============================================================================
# Email Configuration (for notifications)
# ============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@your-domain.com
EMAIL_FROM_NAME=Atom AI Platform

# ============================================================================
# Redis (optional, for caching and sessions)
# ============================================================================
REDIS_URL=redis://localhost:6379/0

# ============================================================================
# File Storage (for uploads, recordings, etc.)
# ============================================================================
UPLOAD_DIR=/var/lib/atom/uploads
MAX_UPLOAD_SIZE=104857600  # 100MB in bytes

# ============================================================================
# Backup Configuration
# ============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_DIR=/var/lib/atom/backups

# ============================================================================
# Additional Services
# ============================================================================
# Browser Automation (Playwright)
BROWSER_HEADLESS=true

# Mobile Push Notifications (optional)
FIREBASE_SERVER_KEY=
APNS_KEY_FILE=
APNS_KEY_ID=
APNS_TEAM_ID=
