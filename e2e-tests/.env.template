# Atom Platform E2E Test Environment Template
# Copy this file to .env and fill in your credentials

# Core Testing
# Required for LLM-based marketing claim verification
OPENAI_API_KEY=your_openai_api_key_here

# Communication Services
SLACK_BOT_TOKEN=your_slack_bot_token_here
DISCORD_BOT_TOKEN=your_discord_bot_token_here
GMAIL_CLIENT_ID=your_gmail_client_id_here
GMAIL_CLIENT_SECRET=your_gmail_client_secret_here
OUTLOOK_CLIENT_ID=your_outlook_client_id_here
OUTLOOK_CLIENT_SECRET=your_outlook_client_secret_here

# Productivity Services
ASANA_ACCESS_TOKEN=your_asana_access_token_here
NOTION_API_KEY=your_notion_api_key_here
LINEAR_API_KEY=your_linear_api_key_here
TRELLO_API_KEY=your_trello_api_key_here
MONDAY_API_KEY=your_monday_api_key_here

# Voice Integration
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Test Environment URLs (Optional - defaults to localhost)
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:5058

# Optional: Development mode settings
TEST_MODE=true
VERBOSE_LOGGING=false
SKIP_LLM_VERIFICATION=false

# Optional: Service-specific settings
# These are used for testing specific features
TEST_SLACK_CHANNEL=general
TEST_DISCORD_CHANNEL=general
TEST_EMAIL_RECIPIENT=test@example.com
