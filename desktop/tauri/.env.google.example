# Google API Configuration for ATOM Desktop
# Copy this file to .env and update with your actual credentials

# Google OAuth2 Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:3000/oauth/google/callback

# Google API Scopes (comma-separated)
GOOGLE_SCOPES=https://www.googleapis.com/auth/gmail.send,https://www.googleapis.com/auth/gmail.readonly,https://www.googleapis.com/auth/gmail.modify,https://www.googleapis.com/auth/calendar.readonly,https://www.googleapis.com/auth/calendar.events,https://www.googleapis.com/auth/drive.readonly,https://www.googleapis.com/auth/drive.file

# Google API Configuration
GOOGLE_API_BASE_URL=https://www.googleapis.com
GOOGLE_GMAIL_URL=https://gmail.googleapis.com
GOOGLE_CALENDAR_URL=https://www.googleapis.com/calendar/v3
GOOGLE_DRIVE_URL=https://www.googleapis.com/drive/v3
GOOGLE_OAUTH_URL=https://oauth2.googleapis.com

# Rate Limiting (requests per second)
GOOGLE_RATE_LIMIT_PER_SECOND=100

# Request Configuration
GOOGLE_REQUEST_TIMEOUT_SECONDS=30
GOOGLE_MAX_RETRIES=3

# Development/Testing
NODE_ENV=development
GOOGLE_USE_MOCK_API=true