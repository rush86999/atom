{
  "name": "atom-outlook-integration",
  "version": "1.0.0",
  "description": "ATOM Desktop Application with Outlook Integration",
  "productName": "ATOM",
  "main": "src/main.js",
  "scripts": {
    "build": "tsc && vite build",
    "build:tauri": "tauri build",
    "build:prod": "tauri build --target x86_64-pc-windows-msvc",
    "dev": "tauri dev",
    "test": "jest --config jest.config.json --coverage",
    "test:watch": "jest --config jest.config.json --watch",
    "test:integration": "jest --config jest.config.json --testPathPattern=integration",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "security-audit": "npm audit --audit-level moderate",
    "deploy": "./deploy-outlook.sh",
    "start": "tauri dev",
    "clean": "rimraf dist build-release coverage",
    "docs:build": "typedoc src --out docs/api",
    "package": "tauri build --bundles msi && tauri build --bundles app",
    "package:all": "tauri build --target universal-apple-darwin,x86_64-apple-darwin,x86_64-pc-windows-msvc,x86_64-unknown-linux-gnu"
  },
  "dependencies": {
    "@tauri-apps/api": "^1.5.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "chakra-ui": "^2.8.0",
    "@emotion/react": "^11.11.0",
    "@emotion/styled": "^11.11.0",
    "framer-motion": "^10.16.0",
    "date-fns": "^2.30.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/uuid": "^9.0.0",
    "@types/jest": "^29.5.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/user-event": "^14.4.0",
    "typescript": "^5.2.0",
    "vite": "^4.5.0",
    "tauri": "^1.5.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "eslint": "^8.54.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "rimraf": "^5.0.0",
    "typedoc": "^0.25.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "fs": {
        "all": false,
        "scope": ["$RESOURCE", "$APPCONFIG", "$APPDATA", "$APPLOCALDATA"]
      },
      "http": {
        "all": true,
        "request": true,
        "scope": ["https://graph.microsoft.com/*", "https://login.microsoftonline.com/*"]
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.atom.desktop",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; connect-src 'self' https://graph.microsoft.com https://login.microsoftonline.com"
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "ATOM - Outlook Integration",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600
      }
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/src/tests/setup.ts"],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts",
      "!src/tests/**/*",
      "!src/main.tsx"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/atom/desktop-app"
  },
  "keywords": [
    "atom",
    "outlook",
    "email",
    "calendar",
    "automation",
    "desktop",
    "tauri",
    "microsoft-graph"
  ],
  "author": "ATOM Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/atom/desktop-app/issues"
  },
  "homepage": "https://atom.ai"
}