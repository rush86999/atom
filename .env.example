# ATOM Agent - Environment Variables Configuration
# Copy this file to .env.local and fill in your credentials

# -------------------------------------------------------------------------
# DATABASE CONFIGURATION
# -------------------------------------------------------------------------

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ATOM Configuration
ATOM_JWT_SECRET=your_jwt_secret
ATOM_ENCRYPTION_KEY=your_encryption_key

# -------------------------------------------------------------------------
# WORKFLOW & EXECUTION CONFIGURATION
# -------------------------------------------------------------------------

# n8n Workflow Configuration
N8N_API_URL=http://localhost:5678
N8N_API_KEY=your_n8n_api_key
N8N_WEBHOOK_URL=http://localhost:3000/api/workflows/webhook

# -------------------------------------------------------------------------
# 3RD PARTY INTEGRATIONS
# -------------------------------------------------------------------------

# Box Integration
BOX_CLIENT_ID=your_box_client_id
BOX_CLIENT_SECRET=your_box_client_secret
BOX_REDIRECT_URI=https://your-domain.com/oauth/box/callback

# Dropbox Integration
DROPBOX_APP_KEY=your_dropbox_app_key
DROPBOX_APP_SECRET=your_dropbox_app_secret
DROPBOX_REDIRECT_URI=https://your-domain.com/oauth/dropbox/callback

# Google Drive / Gmail Integration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=https://your-domain.com/oauth/google/callback

# Slack Integration
SLACK_CLIENT_ID=your_slack_client_id
SLACK_CLIENT_SECRET=your_slack_client_secret
SLACK_REDIRECT_URI=https://your-domain.com/oauth/slack/callback

# Microsoft Teams Integration
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret
MICROSOFT_TENANT_ID=common
MICROSOFT_REDIRECT_URI=https://your-domain.com/oauth/teams/callback
TEAMS_CLIENT_ID=your_microsoft_client_id
TEAMS_CLIENT_SECRET=your_microsoft_client_secret
TEAMS_TENANT_ID=common
TEAMS_REDIRECT_URI=https://your-domain.com/oauth/teams/callback

# Teams OAuth Secret for CSRF protection
TEAMS_OAUTH_SECRET=your_teams_oauth_secret

# Gmail Integration (Additional)
GMAIL_CLIENT_ID=your_gmail_client_id
GMAIL_CLIENT_SECRET=your_gmail_client_secret
GMAIL_REDIRECT_URI=https://your-domain.com/oauth/gmail/callback

# Notion Integration
NOTION_CLIENT_ID=your_notion_client_id
NOTION_INTEGRATION_SECRET=your_notion_integration_secret
NOTION_CLIENT_SECRET=your_notion_client_secret
NOTION_REDIRECT_URI=https://your-domain.com/oauth/notion/callback

# -------------------------------------------------------------------------
# INTEGRATION DATABASE CONFIGURATION
# -------------------------------------------------------------------------

# Integration Authentication Database
DB_INTEGRATION_HOST=your_db_host
DB_INTEGRATION_PORT=5432
DB_INTEGRATION_NAME=atom_integrations
DB_INTEGRATION_USER=your_db_user
DB_INTEGRATION_PASSWORD=your_db_password
DB_INTEGRATION_SSL=require

# -------------------------------------------------------------------------
# ATOM PIPELINE CONFIGURATION
# -------------------------------------------------------------------------

# LanceDB Configuration
ATOM_LANCEDB_URI=lancedb://your-lancedb-instance
ATOM_LANCEDB_API_KEY=your_lancedb_api_key

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_ORGANIZATION=your_openai_org_id

# Vector Database Configuration
ATOM_EMBEDDING_MODEL=text-embedding-3-large
ATOM_EMBEDDING_DIMENSION=3072
ATOM_VECTOR_INDEX_TYPE=IVF_FLAT
ATOM_VECTOR_NUM_PARTITIONS=256

# -------------------------------------------------------------------------
# WORKFLOW & AUTOMATION
# -------------------------------------------------------------------------

# Workflow Configuration
ATOM_WORKFLOW_ENABLED=true
ATOM_WORKFLOW_DEFAULT_TIMEOUT=300000
ATOM_WORKFLOW_MAX_CONCURRENT=10

# -------------------------------------------------------------------------
# PLATFORM CONFIGURATION
# -------------------------------------------------------------------------

# Next.js Configuration
NEXTAUTH_URL=https://your-domain.com
NEXTAUTH_SECRET=your_nextauth_secret

# Tauri Configuration (Desktop App)
TAURI_DEEPLINK_PROTOCOL=atom-agent
TAURI_ALLOWLIST_DOMAINS=your-domain.com

# -------------------------------------------------------------------------
# LOGGING & MONITORING
# -------------------------------------------------------------------------

# Logging Configuration
ATOM_LOG_LEVEL=info
ATOM_LOG_MAX_FILES=10
ATOM_LOG_MAX_SIZE=10m

# Monitoring Configuration
ATOM_METRICS_ENABLED=true
ATOM_HEALTH_CHECK_INTERVAL=60000

# -------------------------------------------------------------------------
# DEVELOPMENT CONFIGURATION
# -------------------------------------------------------------------------

# Development Only
NEXT_PUBLIC_DEV_MODE=true
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_MOCK_INTEGRATIONS=false