# Zoom Integration Environment Setup

# Zoom OAuth Configuration (Required)
ZOOM_CLIENT_ID=your_zoom_client_id
ZOOM_CLIENT_SECRET=your_zoom_client_secret
ZOOM_REDIRECT_URI=http://localhost:3000/oauth/zoom/callback

# Database Configuration
ZOOM_DATABASE_URL=postgresql://user:password@localhost:5432/atom_db
ENCRYPTION_KEY=your_encryption_key_here

# API Configuration
ZOOM_API_BASE_URL=https://api.zoom.us/v2
ZOOM_AUTH_URL=https://zoom.us/oauth/authorize
ZOOM_TOKEN_URL=https://zoom.us/oauth/token
ZOOM_REVOKE_URL=https://zoom.us/oauth/revoke

# Synchronization Configuration
ZOOM_SYNC_INTERVAL=300
ZOOM_SYNC_BATCH_SIZE=100
ZOOM_SYNC_MAX_RETRIES=3

# Rate Limiting Configuration
ZOOM_RATE_LIMIT_REQUESTS_PER_SECOND=10
ZOOM_RATE_LIMIT_BURST_REQUESTS=30
ZOOM_RATE_LIMIT_RETRY_ATTEMPTS=3

# Logging Configuration
ZOOM_LOG_LEVEL=INFO
ZOOM_LOG_FILE=logs/zoom_integration.log

# Frontend Configuration
NEXT_PUBLIC_ZOOM_API_BASE_URL=http://localhost:5058
NEXT_PUBLIC_ZOOM_INTEGRATION_ENABLED=true

# Cache Configuration
ZOOM_CACHE_TTL=300
ZOOM_CACHE_ENABLED=true

# Security Configuration
ZOOM_TOKEN_EXPIRATION_BUFFER=300
ZOOM_ENCRYPTION_ENABLED=true

# Webhook Configuration (Optional)
ZOOM_WEBHOOK_SECRET=your_webhook_secret
ZOOM_WEBHOOK_URL=http://localhost:5058/api/integrations/zoom/webhook

# Monitoring Configuration
ZOOM_METRICS_ENABLED=true
ZOOM_HEALTH_CHECK_ENABLED=true
ZOOM_PERFORMANCE_MONITORING=true