# ATOM Google Drive Integration - Environment Configuration Template
# Copy this file to .env and fill in your values

# ===========================================
# FLASK APPLICATION CONFIGURATION
# ===========================================
FLASK_ENV=development
FLASK_DEBUG=true
FLASK_HOST=0.0.0.0
FLASK_PORT=8000
FLASK_TESTING=false
APP_VERSION=1.0.0

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
SECRET_KEY=your-super-secret-key-change-in-production
ENCRYPTION_KEY=your-encryption-key-32-chars-long
JWT_EXPIRATION=3600
REFRESH_TOKEN_EXPIRATION=86400
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=300
ENABLE_CSRF_PROTECTION=true
ENABLE_RATE_LIMITING=true

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DATABASE_URL=postgresql://atom:password@localhost:5432/atom
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
DB_ECHO=false
DB_NAME=atom

# ===========================================
# REDIS CONFIGURATION
# ===========================================
REDIS_URL=redis://localhost:6379/0
REDIS_DECODE_RESPONSES=true
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5
REDIS_RETRY_ON_TIMEOUT=true
REDIS_HEALTH_CHECK_INTERVAL=30
REDIS_MAX_CONNECTIONS=100

# ===========================================
# GOOGLE DRIVE API CONFIGURATION
# ===========================================
# Get these from Google Cloud Console
GOOGLE_DRIVE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_DRIVE_CLIENT_SECRET=your-google-client-secret
GOOGLE_DRIVE_REDIRECT_URI=http://localhost:8000/auth/google/callback
GOOGLE_DRIVE_WEBHOOK_SECRET=your-webhook-secret

# API settings
GOOGLE_DRIVE_SCOPES=https://www.googleapis.com/auth/drive,https://www.googleapis.com/auth/drive.file
GOOGLE_DRIVE_API_TIMEOUT=30
GOOGLE_DRIVE_MAX_RETRIES=3
GOOGLE_DRIVE_RATE_LIMIT_REQUESTS=100
GOOGLE_DRIVE_RATE_LIMIT_PERIOD=100

# ===========================================
# LANCEDB CONFIGURATION
# ===========================================
LANCE_DB_PATH=./lancedb/data
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384
LANCE_BATCH_SIZE=100
LANCE_MAX_CACHE_SIZE=1000
LANCE_INDEX_TYPE=ivfflat
LANCE_INDEX_PARTITIONS=100

# ===========================================
# SEARCH SYSTEM CONFIGURATION
# ===========================================
SEARCH_ENABLED=true
SEARCH_PROVIDERS=google_drive,lancedb
SEARCH_DEFAULT_PROVIDER=google_drive
SEARCH_MAX_RESULTS=1000
SEARCH_DEFAULT_LIMIT=50
SEARCH_CACHE_TTL=3600
SEARCH_ENABLE_SEMANTIC=true
SEARCH_ENABLE_FACETED=true
SEARCH_ENABLE_REAL_TIME=true
SEARCH_ENABLE_SUGGESTIONS=true
SEARCH_MIN_LENGTH=1
SEARCH_DEBOUNCE_TIME=300

# ===========================================
# WORKFLOW AUTOMATION CONFIGURATION
# ===========================================
AUTOMATION_ENABLED=true
MAX_CONCURRENT_WORKFLOWS=10
DEFAULT_WORKFLOW_TIMEOUT=300
MAX_ACTIONS_PER_WORKFLOW=50
SCHEDULED_WORKFLOWS_ENABLED=true
WEBHOOK_TRIGGERS_ENABLED=true
FILE_TRIGGERS_ENABLED=true
MANUAL_TRIGGERS_ENABLED=true
WORKFLOW_HISTORY_DAYS=90

# ===========================================
# REAL-TIME SYNC CONFIGURATION
# ===========================================
SYNC_ENABLED=true
SYNC_INTERVAL=30
MAX_SYNC_WORKERS=5
SYNC_BATCH_SIZE=100
SYNC_ENABLE_WEBHOOKS=true
SYNC_WEBHOOK_TIMEOUT=10
SYNC_MAX_WEBHOOK_RETRIES=3
SYNC_EVENT_RETENTION_DAYS=30
INCREMENTAL_SYNC_ENABLED=true

# ===========================================
# CONTENT INGESTION CONFIGURATION
# ===========================================
INGESTION_ENABLED=true
INGESTION_MAX_FILE_SIZE=104857600
INGESTION_SUPPORTED_FORMATS=pdf,doc,docx,txt,rtf,odt,jpg,jpeg,png,gif,bmp,svg,mp4,avi,mov,wmv,flv,webm,mp3,wav,flac,aac,ogg,zip,rar,7z,tar,gz
MAX_CONCURRENT_EXTRACTIONS=5
EXTRACTION_TIMEOUT=60
ENABLE_OCR=true
ENABLE_METADATA_EXTRACTION=true

# ===========================================
# CORS CONFIGURATION
# ===========================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000,http://127.0.0.1:8080

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_LEVEL=INFO
LOG_FILE_PATH=./logs/atom.log
LOG_MAX_FILE_SIZE=10485760
LOG_BACKUP_COUNT=5
LOG_ENABLE_CONSOLE=true
LOG_ENABLE_FILE=true
LOG_FORMAT=<green>{time:YYYY-MM-DD HH:mm:ss}</green> | <level>{level: <8}</level> | <cyan>{name}</cyan>:<cyan>{function}</cyan>:<cyan>{line}</cyan> - <level>{message}</level>
LOG_ENABLE_STRUCTURED=true

# ===========================================
# PERFORMANCE CONFIGURATION
# ===========================================
PERFORMANCE_ENABLE_CACHING=true
CACHE_DEFAULT_TIMEOUT=300
PERFORMANCE_ENABLE_COMPRESSION=true
COMPRESSION_LEVEL=6
PERFORMANCE_ENABLE_ASYNC=true
MAX_ASYNC_WORKERS=20
REQUEST_TIMEOUT=30
ENABLE_CONNECTION_POOLING=true

# ===========================================
# MONITORING CONFIGURATION
# ===========================================
MONITORING_ENABLE_METRICS=true
MONITORING_ENABLE_HEALTH_CHECKS=true
MONITORING_HEALTH_CHECK_INTERVAL=60
MONITORING_METRICS_RETENTION_DAYS=30
MONITORING_ENABLE_PERFORMANCE=true
MONITORING_ENABLE_ERROR_TRACKING=true
MONITORING_ENABLE_USAGE_ANALYTICS=true
MONITORING_ALERT_WEBHOOK_URL=

# ===========================================
# DEVELOPMENT SPECIFIC
# ===========================================
# Only for development environment
DEV_RELOAD=true
DEV_DEBUGGER=true
DEV_PROFILES=true

# ===========================================
# TESTING SPECIFIC
# ===========================================
# Only for testing environment
TEST_DATABASE_URL=sqlite:///test.db
TEST_REDIS_URL=redis://localhost:6379/1
TEST_LOG_LEVEL=DEBUG
TEST_FILE_PATH=./logs/test.log

# ===========================================
# PRODUCTION SPECIFIC
# ===========================================
# Only for production environment
PROD_DEBUG=false
PROD_LOG_LEVEL=INFO
PROD_MAX_CONNECTIONS=100
PROD_SSL_REQUIRED=true
PROD_FORCE_HTTPS=true

# ===========================================
# OPTIONAL INTEGRATIONS
# ===========================================
# Email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true
EMAIL_FROM=noreply@atom.com
EMAIL_FROM_NAME=ATOM

# Slack notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#atom-notifications

# Trello integration
TRELLO_API_KEY=your-trello-api-key
TRELLO_TOKEN=your-trello-token
TRELLO_BOARD_ID=your-trello-board-id

# Jira integration
JIRA_URL=https://your-company.atlassian.net
JIRA_USERNAME=your-jira-username
JIRA_API_TOKEN=your-jira-api-token
JIRA_PROJECT=ATOM

# External monitoring
SENTRY_DSN=https://your-sentry-dsn
DATADOG_API_KEY=your-datadog-api-key
NEW_RELIC_LICENSE_KEY=your-newrelic-license-key

# ===========================================
# ADVANCED CONFIGURATION
# ===========================================
# File processing limits
MAX_FILE_SIZE_UPLOAD=104857600  # 100MB
MAX_CONCURRENT_UPLOADS=5
UPLOAD_TIMEOUT=300

# Search analytics
SEARCH_HISTORY_RETENTION_DAYS=365
SEARCH_AGGREGATION_INTERVAL=3600  # 1 hour
SEARCH_SUGGESTION_CACHE_TTL=3600

# Workflow execution
WORKFLOW_MAX_MEMORY_USAGE=1073741824  # 1GB
WORKFLOW_MAX_EXECUTION_TIME=1800  # 30 minutes
WORKFLOW_RETRY_MAX_ATTEMPTS=3
WORKFLOW_RETRY_DELAY=60  # seconds

# Background processing
BACKGROUND_TASK_QUEUE_MAX_SIZE=1000
BACKGROUND_WORKER_COUNT=5
BACKGROUND_TASK_TIMEOUT=600

# Rate limiting
RATE_LIMIT_PER_IP=1000
RATE_LIMIT_PER_IP_WINDOW=3600
RATE_LIMIT_PER_USER=5000
RATE_LIMIT_PER_USER_WINDOW=3600

# Security
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem
CSRF_SECRET_KEY=your-csrf-secret-key
SESSION_TIMEOUT=3600

# Performance
DATABASE_QUERY_TIMEOUT=30
REDIS_CONNECTION_POOL_SIZE=50
API_RESPONSE_COMPRESSION_THRESHOLD=1024
ASYNCIO_EVENT_LOOP_POLICY=uvloop

# Logging
LOG_STRUCTURED_FIELDS=timestamp,level,message,module,function,line
LOG_CORRELATION_ID_HEADER=X-Correlation-ID
LOG_REQUEST_ID_HEADER=X-Request-ID
LOG_USER_AGENT_HEADER=User-Agent

# ===========================================
# FEATURE FLAGS
# ===========================================
# Enable/disable features
FEATURE_BETA_SEARCH=false
FEATURE_ADVANCED_ANALYTICS=false
FEATURE_MULTI_TENANT=false
FEATURE_ENTERPRISE_AUTH=false
FEATURE_WEBHOOK_SECURITY=true
FEATURE_BATCH_OPERATIONS=true
FEATURE_API_VERSIONING=true
FEATURE_METRICS_EXPORT=true

# ===========================================
# NOTES
# ===========================================
# 1. Replace all placeholder values with your actual configuration
# 2. Keep this file secure - don't commit to version control
# 3. Use environment-specific configurations for different deployments
# 4. Regularly rotate secret keys and passwords
# 5. Monitor log levels and adjust based on production needs
# 6. Backup your database and Redis data regularly
# 7. Test configuration changes in development before production
# 8. Use SSL/TLS in production environments
# 9. Implement proper backup and disaster recovery procedures
# 10. Monitor resource usage and scale as needed