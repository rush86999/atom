# ============================================
# Enhanced Google Services Configuration
# ============================================
# Copy this file to .env and fill in your values

# Google OAuth 2.0 Configuration
# Get these from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:3000/oauth/google/callback

# Google API Scopes (Space-separated)
# Required for Enhanced Gmail API
GOOGLE_GMAIL_SCOPES=https://www.googleapis.com/auth/gmail.readonly https://www.googleapis.com/auth/gmail.send https://www.googleapis.com/auth/gmail.modify https://www.googleapis.com/auth/gmail.labels

# Required for Enhanced Calendar API
GOOGLE_CALENDAR_SCOPES=https://www.googleapis.com/auth/calendar https://www.googleapis.com/auth/calendar.events https://www.googleapis.com/auth/calendar.readonly https://www.googleapis.com/auth/calendar.settings.readonly

# Required for Google Drive API
GOOGLE_DRIVE_SCOPES=https://www.googleapis.com/auth/drive.readonly https://www.googleapis.com/auth/drive.metadata.readonly

# Combined scopes for all services
GOOGLE_SCOPES=https://www.googleapis.com/auth/gmail.readonly https://www.googleapis.com/auth/gmail.send https://www.googleapis.com/auth/gmail.modify https://www.googleapis.com/auth/gmail.labels https://www.googleapis.com/auth/calendar https://www.googleapis.com/auth/calendar.events https://www.googleapis.com/auth/calendar.readonly https://www.googleapis.com/auth/calendar.settings.readonly https://www.googleapis.com/auth/drive.readonly https://www.googleapis.com/auth/drive.metadata.readonly

# Google Cloud Project Configuration
GOOGLE_PROJECT_ID=your_google_project_id
GOOGLE_PROJECT_NUMBER=your_google_project_number

# Google Application Credentials
# Alternative to client ID/secret: Use service account
# GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# API Configuration
GOOGLE_API_TIMEOUT=30
GOOGLE_MAX_RETRIES=3
GOOGLE_RETRY_DELAY=1

# Rate Limiting
GOOGLE_RATE_LIMIT_REQUESTS=100
GOOGLE_RATE_LIMIT_WINDOW=60

# Database Configuration (for OAuth token storage)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=atom
DB_USER=postgres
DB_PASSWORD=your_database_password

# Security Configuration
GOOGLE_TOKEN_ENCRYPTION_KEY=your_encryption_key_here
GOOGLE_SESSION_SECRET=your_session_secret_here

# Logging Configuration
GOOGLE_LOG_LEVEL=INFO
GOOGLE_ENABLE_REQUEST_LOGGING=true
GOOGLE_ENABLE_RESPONSE_LOGGING=false

# Feature Flags
GOOGLE_ENABLE_GMAIL_ENHANCED=true
GOOGLE_ENABLE_CALENDAR_ENHANCED=true
GOOGLE_ENABLE_DRIVE_ENHANCED=true
GOOGLE_ENABLE_ANALYTICS=true
GOOGLE_ENABLE_SENTIMENT_ANALYSIS=true

# Cache Configuration
GOOGLE_CACHE_TTL=3600
GOOGLE_ENABLE_CACHE=true

# Webhook Configuration
GOOGLE_WEBHOOK_SECRET=your_webhook_secret
GOOGLE_WEBHOOK_URL=https://your-domain.com/webhooks/google

# Email Configuration (for Gmail sending)
GOOGLE_SENDER_EMAIL=your-email@gmail.com
GOOGLE_SENDER_NAME=Your Name

# Calendar Configuration
GOOGLE_DEFAULT_TIMEZONE=UTC
GOOGLE_CALENDAR_WEBHOOK_URL=https://your-domain.com/webhooks/calendar

# Development Configuration
GOOGLE_DEBUG=false
GOOGLE_TEST_MODE=false
GOOGLE_MOCK_API=false

# Monitoring Configuration
GOOGLE_ENABLE_METRICS=true
GOOGLE_METRICS_PORT=9090
GOOGLE_HEALTH_CHECK_INTERVAL=60

# Backup Configuration
GOOGLE_ENABLE_TOKEN_BACKUP=true
GOOGLE_BACKUP_LOCATION=./backups/google_tokens/

# Integration Configuration
GOOGLE_SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook
GOOGLE_DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your/discord/webhook

# ============================================
# Setup Instructions:
# ============================================
#
# 1. Create Google Cloud Project:
#    - Go to https://console.cloud.google.com
#    - Create new project or use existing
#
# 2. Enable APIs:
#    - Gmail API
#    - Google Calendar API
#    - Google Drive API
#
# 3. Create OAuth 2.0 Credentials:
#    - Go to APIs & Services > Credentials
#    - Create OAuth 2.0 Client ID
#    - Configure authorized redirect URIs
#    - Download client ID and secret
#
# 4. Configure Database:
#    - Create PostgreSQL database
#    - Run database migrations
#
# 5. Set Environment Variables:
#    - Copy this template to .env
#    - Fill in all required values
#    - Test API endpoints
#
# 6. Test Integration:
#    - Run test_google_enhanced.py
#    - Check API health endpoints
#    - Verify OAuth flow
#
# For more information, see README_GOOGLE_ENHANCED.md
# ============================================