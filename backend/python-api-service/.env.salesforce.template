# ============================================
# Enhanced Salesforce Services Configuration
# ============================================
# Copy this file to .env and fill in your values

# Salesforce OAuth 2.0 Configuration
# Get these from: https://login.salesforce.com/connected-app
SALESFORCE_CLIENT_ID=your_salesforce_consumer_key_here
SALESFORCE_CLIENT_SECRET=your_salesforce_consumer_secret_here
SALESFORCE_REDIRECT_URI=http://localhost:3000/oauth/salesforce/callback

# Salesforce Environment Configuration
SALESFORCE_ENVIRONMENT=production  # production or sandbox

# For Sandbox Environment, use:
# SALESFORCE_ENVIRONMENT=sandbox
# https://test.salesforce.com for sandbox OAuth

# Salesforce API Scopes (Space-separated)
SALESFORCE_SCOPES=api refresh_token offline_access

# Salesforce API Configuration
SALESFORCE_API_VERSION=56.0
SALESFORCE_API_TIMEOUT=30
SALESFORCE_MAX_RETRIES=3
SALESFORCE_RETRY_DELAY=1

# Rate Limiting
SALESFORCE_RATE_LIMIT_REQUESTS=1000
SALESFORCE_RATE_LIMIT_WINDOW=300  # 5 minutes

# Database Configuration (for OAuth token storage)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=atom
DB_USER=postgres
DB_PASSWORD=your_database_password

# Security Configuration
SALESFORCE_TOKEN_ENCRYPTION_KEY=your_encryption_key_here
SALESFORCE_SESSION_SECRET=your_session_secret_here

# Logging Configuration
SALESFORCE_LOG_LEVEL=INFO
SALESFORCE_ENABLE_REQUEST_LOGGING=true
SALESFORCE_ENABLE_RESPONSE_LOGGING=false

# Feature Flags
SALESFORCE_ENABLE_ACCOUNT_MANAGEMENT=true
SALESFORCE_ENABLE_CONTACT_MANAGEMENT=true
SALESFORCE_ENABLE_OPPORTUNITY_MANAGEMENT=true
SALESFORCE_ENABLE_LEAD_MANAGEMENT=true
SALESFORCE_ENABLE_ADVANCED_ANALYTICS=true
SALESFORCE_ENABLE_AI_FEATURES=true
SALESFORCE_ENABLE_WORKFLOW_AUTOMATION=true

# Cache Configuration
SALESFORCE_CACHE_TTL=3600
SALESFORCE_ENABLE_CACHE=true

# Webhook Configuration
SALESFORCE_WEBHOOK_SECRET=your_webhook_secret
SALESFORCE_WEBHOOK_URL=https://your-domain.com/webhooks/salesforce

# Advanced Features Configuration
SALESFORCE_ENABLE_PREDICTIVE_ANALYTICS=true
SALESFORCE_ENABLE_LEAD_SCORING=true
SALESFORCE_ENABLE_OPPORTUNITY_SCORING=true
SALESFORCE_ENABLE_ACCOUNT_HEALTH_SCORING=true
SALESFORCE_ENABLE_DUPLICATE_DETECTION=true

# Development Configuration
SALESFORCE_DEBUG=false
SALESFORCE_TEST_MODE=false
SALESFORCE_MOCK_API=false

# Monitoring Configuration
SALESFORCE_ENABLE_METRICS=true
SALESFORCE_METRICS_PORT=9091
SALESFORCE_HEALTH_CHECK_INTERVAL=60

# Integration Configuration
SALESFORCE_SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook
SALESFORCE_DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your/discord/webhook
SALESFORCE_EMAIL_NOTIFICATIONS=true
SALESFORCE_EMAIL_RECIPIENT=admin@your-domain.com

# Business Intelligence Configuration
SALESFORCE_ENABLE_SALES_FORECASTING=true
SALESFORCE_ENABLE_PIPELINE_ANALYTICS=true
SALESFORCE_ENABLE_CONVERSION_TRACKING=true
SALESFORCE_ENABLE_PERFORMANCE_ANALYTICS=true
SALESFORCE_ENABLE_CUSTOMER_INSIGHTS=true

# Compliance Configuration
SALESFORCE_ENABLE_AUDIT_LOGGING=true
SALESFORCE_RETENTION_DAYS=2555  # 7 years
SALESFORCE_DATA_ANONYMIZATION=false
SALESFORCE_GDPR_COMPLIANCE=true

# Performance Configuration
SALESFORCE_BATCH_SIZE=200
SALESFORCE_CONCURRENT_REQUESTS=10
SALESFORCE_CONNECTION_POOL_SIZE=20
SALESFORCE_QUERY_TIMEOUT=60

# Backup Configuration
SALESFORCE_ENABLE_TOKEN_BACKUP=true
SALESFORCE_BACKUP_LOCATION=./backups/salesforce_tokens/
SALESFORCE_BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM

